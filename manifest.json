{
    "manifest_version": 2,
    "name": "Time Tracker",
    "version": "0.1",
    "description": "A WIP time tracker extension.",

    "background": {
        "scripts": ["background.js"]
    },

    "permissions": [
        "tabs",
        "idle",
	"storage"
    ],

    "browser_action": {
        "default_icon": "icons/hourglass-32.png",
        "default_title": "Time tracker",
        "default_popup": "popup/popup.html"
    }
}
